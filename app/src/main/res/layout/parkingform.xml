<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#00597f"
    android:clickable="true">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton"
        android:src="@mipmap/uealogo2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:padding="-5dp"
        android:background="#ffffff"
        android:clickable="true" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Search..."
        android:id="@+id/textView"
        android:background="#ffffff"
        android:textSize="30dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2"
        android:clickable="true"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton2"
        android:src="@mipmap/tosearch"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Carpark Name"
        android:id="@+id/textView7"
        android:background="#c67623"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/spinner" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/spinner"
        android:background="#ffffff"
        android:layout_below="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton2"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time of Arrival"
        android:id="@+id/textView8"
        android:background="#c67623"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textview9"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/textview9"
        android:background="#ffffff"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/spinner"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zone (optional)"
        android:id="@+id/textView9"
        android:background="#c67623"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/textview9"
        android:layout_below="@+id/textview9"
        android:layout_toStartOf="@+id/textview10"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/textview10"
        android:background="#ffffff"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/spinner"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Add"
        android:id="@+id/button3"
        android:layout_below="@+id/textview10"
        android:layout_alignStart="@+id/textview10"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/textview10"
        android:layout_alignParentEnd="false"
        android:textSize="@dimen/abc_text_size_medium_material" />

</RelativeLayout>
